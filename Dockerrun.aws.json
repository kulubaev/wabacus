{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "web",
      "image": "shnoby/wabacus-web:latest",
      "hostname": "web",
      "essential": false,
      "memory": 128
    },
    {
      "name": "api",
      "image": "shnoby/wabacus-api:latest",
      "hostname": "api",
      "essential": false,
      "memory": 128,
      "environment": [
        {
          "name": "MQHOST",
          "value": "tcp://worker"
        },
        {
          "name": "MQPORT",
          "value": "5000"
        },
        {
          "name": "DBPORT",
          "value": "5432"
        },
        {
          "name": "DBUSER",
          "value": "postgres"
        },
        {
          "name": "DBNAME",
          "value": "postgres"
        }
      ],
      "links": ["worker"]
    },
    {
      "name": "worker",
      "image": "shnoby/wabacus-worker:latest",
      "hostname": "worker",
      "essential": false,
      "memory": 128,
      "environment": [
        {
          "name": "MQWHOST",
          "value": "tcp://*"
        },
        {
          "name": "MQPORT",
          "value": "5000"
        }
      ]
    },
    {
      "name": "nginx",
      "image": "shnoby/wabacus-nginx:latest",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["web", "api"],
      "memory": 128
    }
  ]
}
